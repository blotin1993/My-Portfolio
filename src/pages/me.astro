---
import Layout from '../layouts/Layout.astro';
import GoBackButton from '../components/GoBackButton.astro';
---

<Layout title="About me">
	<main>
		<GoBackButton/>
		<h1>About me</h1>
		<p>
			My name is <strong>Gonzalo Blotta</strong>, I'm 29 years old and living in Mar del Plata, Buenos Aires.
		</p>
	</main>
</Layout>

<style>
	h1 {
		display: flex;
		justify-content: center;
		margin: 1rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	header {
		display: flex;
		justify-content: flex-start;
		margin: 0 1rem;
	}
</style>
